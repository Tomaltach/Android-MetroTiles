<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MetroTileView">
        <attr name="textSize" format="float" />
        <attr name="textColor" format="color" />
        <attr name="tileText" format="reference" />
        <attr name="tileIcon" format="reference" />

        <attr name="iconSize" format="float" />
        <attr name="iconColor" format="color" />

        <attr name="tilesPerRow" format="integer" />
        <attr name="backgroundColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderSize" format="integer" />

        <attr name="showTileBorder" format="enum">
            <enum name="no" value="0" />
            <enum name="yes" value="1" />
        </attr>

        <attr name="tileHeight" format="integer" />
        <attr name="iconTextOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="tileShape" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="circle" value="1" />
        </attr>

        <attr name="margin" format="integer" />
        <attr name="marginLeft" format="integer" />
        <attr name="marginRight" format="integer" />
        <attr name="marginTop" format="integer" />
        <attr name="marginBottom" format="integer" />

        <attr name="padding" format="integer" />
        <attr name="paddingLeft" format="integer" />
        <attr name="paddingRight" format="integer" />
        <attr name="paddingTop" format="integer" />
        <attr name="paddingBottom" format="integer" />
    </declare-styleable>

</resources>