<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:metro="http://schemas.android.com/apk/res/ie.tomaltach.thomasdonegan.android.widgets"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="ie.tomaltach.thomasdonegan.android.widgets.metrotiles.demo.DemoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ie.tomaltach.thomasdonegan.android.widgets.metrotiles.MetroTileView
            android:id="@+id/tileView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            metro:iconTextOrientation="vertical"
            metro:margin="5"
            metro:tileText="@array/demo_tile_titles"
            metro:tileIcon="@array/demo_tile_icons"
            metro:textSize="30"
            metro:tileHeight="150"
            metro:tilesPerRow="3"
            metro:textColor="@color/teal"
            metro:iconColor="@color/orange"
            metro:backgroundColor="@color/default_background"
            metro:tileShape="circle" />

        <ie.tomaltach.thomasdonegan.android.widgets.metrotiles.MetroTileView
            android:id="@+id/tileView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            metro:iconTextOrientation="vertical"
            metro:margin="5"
            metro:tileText="@array/demo_tile_titles"
            metro:tileIcon="@array/demo_tile_icons"
            metro:textSize="30"
            metro:tileHeight="150"
            metro:tilesPerRow="4"
            metro:textColor="@color/teal"
            metro:iconColor="@color/orange"
            metro:backgroundColor="@color/default_background"
            metro:tileShape="rectangle" />

    </LinearLayout>

</ScrollView>